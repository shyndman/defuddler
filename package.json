{
  "name": "defuddler",
  "version": "0.0.0",
  "description": "A command-line interface for extracting main content from web pages and articles",
  "main": "dist/cli.js",
  "bin": {
    "defud": "dist/cli.js"
  },
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "lint": "eslint --config eslint.config.mjs src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\" \"*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"*.ts\"",
    "typecheck": "tsc --noEmit",
    "test": "vitest run --cache",
    "test:watch": "vitest --cache",
    "test:coverage": "vitest run --coverage --cache",
    "prepare": "husky",
    "prepublishOnly": "pnpm run build",
    "release": "semantic-release",
    "commit-msg-lint": "commitlint --edit",
    "commit": "cz"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --config eslint.config.mjs",
      "prettier --check"
    ],
    "*.{json,md}": [
      "prettier --check"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "keywords": [
    "cli",
    "content-extraction",
    "readability",
    "web-scraping",
    "defuddler"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shyndman/defuddler.git"
  },
  "bugs": {
    "url": "https://github.com/shyndman/defuddler/issues"
  },
  "homepage": "https://github.com/shyndman/defuddler#readme",
  "dependencies": {
    "@caporal/core": "^2.0.7",
    "@typescript-eslint/eslint-plugin": "^8.29.1",
    "@typescript-eslint/parser": "^8.29.1",
    "chalk": "^5.4.1",
    "debug": "^4.4.0",
    "defuddle": "^0.6.1",
    "got": "^14.4.7",
    "husky": "^9.1.7",
    "js-yaml": "^4.1.0",
    "jsdom": "^24.1.3",
    "open": "^10.1.0",
    "ora": "^8.2.0",
    "turndown": "^7.2.0",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@eslint/js": "^9.24.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.1",
    "@semantic-release/npm": "^12.0.1",
    "@semantic-release/release-notes-generator": "^14.0.3",
    "@stylistic/eslint-plugin-js": "^4.2.0",
    "@types/debug": "^4.1.12",
    "@types/js-yaml": "^4.0.9",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^22.14.1",
    "@types/turndown": "^5.0.5",
    "@vitest/coverage-v8": "3.1.1",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.24.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-prettier": "^5.2.6",
    "jiti": "^2.4.2",
    "prettier": "^3.5.3",
    "prettier-eslint": "^16.3.0",
    "semantic-release": "^24.2.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.29.1",
    "vite": "^6.2.6",
    "vitest": "^3.1.1"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "pnpm@10.8.0+sha512.0e82714d1b5b43c74610193cb20734897c1d00de89d0e18420aebc5977fa13d780a9cb05734624e81ebd81cc876cd464794850641c48b9544326b5622ca29971"
}
