{
  "name": "defuddler",
  "version": "0.0.0",
  "description": "A command-line interface for extracting main content from web pages and articles",
  "main": "dist/cli.js",
  "bin": {
    "defud": "dist/cli.js"
  },
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "lint": "eslint --config eslint.config.ts src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\" \"*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"*.ts\"",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "prepare": "husky",
    "prepublishOnly": "pnpm run build"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --config eslint.config.ts",
      "prettier --check"
    ]
  },
  "keywords": [
    "cli",
    "content-extraction",
    "readability",
    "web-scraping",
    "defuddler"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shyndman/defuddler.git"
  },
  "bugs": {
    "url": "https://github.com/shyndman/defuddler/issues"
  },
  "homepage": "https://github.com/shyndman/defuddler#readme",
  "dependencies": {
    "@caporal/core": "^2.0.7",
    "chalk": "^5.4.1",
    "debug": "^4.4.0",
    "defuddle": "^0.6.1",
    "got": "^14.4.7",
    "husky": "^9.1.7",
    "jsdom": "^24.1.3",
    "open": "^10.1.0",
    "ora": "^8.2.0",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.24.0",
    "@stylistic/eslint-plugin-js": "^4.2.0",
    "@types/debug": "^4.1.12",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^22.14.1",
    "eslint": "^9.24.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-prettier": "^5.2.6",
    "jiti": "^2.4.2",
    "prettier": "^3.5.3",
    "prettier-eslint": "^16.3.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.29.1",
    "vite": "^6.2.6",
    "vitest": "^3.1.1"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "pnpm@10.8.0+sha512.0e82714d1b5b43c74610193cb20734897c1d00de89d0e18420aebc5977fa13d780a9cb05734624e81ebd81cc876cd464794850641c48b9544326b5622ca29971"
}
