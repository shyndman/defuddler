{
  "name": "defuddle-cli",
  "version": "0.1.0",
  "description": "A command-line interface for extracting main content from web pages and articles",
  "main": "dist/cli.js",
  "bin": {
    "defuddle": "dist/cli.js"
  },
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "lint": "eslint --config eslint.config.ts src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\" \"*.ts\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "prepublishOnly": "pnpm run build"
  },
  "keywords": [
    "cli",
    "content-extraction",
    "readability",
    "web-scraping",
    "defuddle"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shyndman/defuddle-cli.git"
  },
  "bugs": {
    "url": "https://github.com/shyndman/defuddle-cli/issues"
  },
  "homepage": "https://github.com/shyndman/defuddle-cli#readme",
  "dependencies": {
    "@caporal/core": "^2.0.7",
    "chalk": "^5.4.0",
    "debug": "^4.4.0",
    "defuddle": "^0.6.0",
    "got": "^14.4.6",
    "open": "^10.1.0",
    "ora": "^8.2.0",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.24.0",
    "@types/debug": "^4.1.11",
    "@types/node": "^22.14.0",
    "eslint": "^9.24.0",
    "jiti": "^2.4.1",
    "prettier": "^3.5.2",
    "ts-node": "^10.9.1",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.29.0",
    "vite": "^6.2.5",
    "vitest": "^3.1.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "pnpm@10.8.0+sha512.0e82714d1b5b43c74610193cb20734897c1d00de89d0e18420aebc5977fa13d780a9cb05734624e81ebd81cc876cd464794850641c48b9544326b5622ca29971"
}
