#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "🚀 Running pre-push checks..."

# Run linting on all files
echo "🔍 Running linting on all files..."
pnpm run lint

# Run type checking
echo "📝 Running type checking..."
pnpm run typecheck

# Run tests
echo "🧪 Running tests..."
pnpm run test

echo "✅ Pre-push checks passed!"
